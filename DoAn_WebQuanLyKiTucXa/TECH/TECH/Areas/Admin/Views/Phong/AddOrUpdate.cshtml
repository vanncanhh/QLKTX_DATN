@{
    Layout = null;
}
<div id="userModal" tabindex="-1" role="dialog" aria-labelledby="userModalTitle" class="modal fade bd-example-modal-lg" aria-modal="true">
    <div role="document" class="modal-dialog modal-lg">
        <form id="form-submit" action="#">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 id="titleModal" class="modal-title white">Thêm mới phòng</h5>
                    <button type="button" data-dismiss="modal" aria-label="Close" class="close"><span aria-hidden="true">×</span></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        @*<div class="col-6">
                            <div class="form-group has-icon-left">
                                <label for="first-name-icon">Tên nhà </label>
                                <div class="position-relative">
                                    <select id="MaNha" name="MaNha" class="form-select select">
                                    </select>
                                </div>
                                
                            </div>
                        </div>*@
                        <div class="col-6">
                            <div class="form-group has-icon-left">
                                <label for="email-id-icon">Tên phòng</label>
                                <div class="position-relative">
                                    <input type="text" placeholder="" id="TenPhong" name="TenPhong" class="form-control custom-format">                                    
                                </div>                                
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group has-icon-left">
                                <label for="mobile-id-icon"> Đơn giá </label>
                                <div class="position-relative">
                                    <input type="text" placeholder="" id="DonGia" name="DonGia" class="form-control custom-format">
                                    
                                </div>
                                
                            </div>
                        </div>
                       @* <div class="col-6">
                            <div class="form-group has-icon-left">
                                <label for="mobile-id-icon"> Số lượng người tối đa </label>
                                <div class="position-relative">
                                    <input type="text" placeholder="" id="SLNguoiMax" name="SLNguoiMax" class="form-control custom-format">                                    
                                </div>
                                
                            </div>
                        </div>*@
                        <div class="col-6">
                            <div class="form-group has-icon-left">
                                <label for="mobile-id-icon"> Chiều dài </label>
                                <div class="position-relative">
                                    <input type="number" step="0.1" placeholder="" id="ChieuRong" name="ChieuRong" class="form-control custom-format">
                                    
                                </div>
                                
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group has-icon-left">
                                <label for="mobile-id-icon"> Chiều rộng </label>
                                <div class="position-relative">
                                    <input type="number" step="0.1" min="0" placeholder="" id="ChieuDai" name="ChieuDai" class="form-control custom-format">
                                </div>
                                
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="form-group has-icon-left">
                                <label for="password-id-icon">Loại phòng</label>
                                <div class="position-relative">
                                    <select id="LoaiPhong" name="LoaiPhong" class="form-select select">
                                        <option value="">Chọn loại phòng</option>
                                        @*<option value="1">Cả nam và nữ</option>*@
                                        <option value="2">Nam</option>
                                        <option value="3">Nữ</option>
                                    </select>
                                </div>
                                
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group has-icon-left">
                                <label for="password-id-icon">Trạng thái</label>
                                <div class="position-relative">
                                    <select id="TinhTrang" name="TinhTrang" class="form-select select">
                                        <option value="">Chọn trạng thái</option>
                                        <option value="1">Trống</option>
                                        <option value="2">Còn chỗ</option>
                                        <option value="3">Hết chỗ</option>
                                    </select>
                                </div>
                                
                            </div>
                        </div>
                        <div class="col-12 mb-2">
                            <div class="form-group product-images">
                                <label style="display: block">Icon <span class="required">(*)</span></label>
                                <input type="file" id="productimages" name="productimages" class="form-control filesImages" multiple style="display:none"> <!----> <!---->
                                <label class="box-image" for="productimages"></label>
                                <div class="productimages"></div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group has-icon-left">
                                <label for="password-id-icon">Mô tả</label>
                            <div class="position-relative">
                                <textarea name="MoTa" id="MoTa" rows="3" placeholder="..." class="form-control"></textarea>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
                    <div class="modal-footer"><button type="submit" class="btn btn-primary me-1 mb-1 btn-submit-format">Thêm mới</button></div>
                </div>
        </form>
    </div>
