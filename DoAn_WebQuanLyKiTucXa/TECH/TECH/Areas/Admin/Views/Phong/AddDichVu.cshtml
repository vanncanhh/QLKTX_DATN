@{
    Layout = null;
}
<div id="quantity" tabindex="-1" role="dialog" aria-labelledby="quantity" class="modal fade" aria-modal="true">
    <div role="document" class="modal-dialog modal-lg">
        <form id="form-submit-quantity" action="#">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 id="titleModal" class="modal-title white ">Quản lý dịch vụ phòng</h5>
                    <button type="button" data-dismiss="modal" aria-label="Close" class="close"><span aria-hidden="true">×</span></button>
                </div>
                <div class="modal-body">
                    <button type="button" class="btn btn-success btn-float btn-create-row-quantity" style="float: right;">
                        <span style="display: flex; align-items: center;"><i class="bi bi-plus-circle"></i> <span style="margin-left: 6px; padding-top: 2px;"> Tạo mới</span></span>
                    </button>
                    <div class="table-responsive" style=" width: 100%; display: inline-block; margin-top: 15px;">
                        <table id="table1" class="table table-striped table-custom">
                            <thead>
                                <tr>
                                    <th style="width:3%">STT</th>
                                    @*<th width="15%">Màu sắc</th>*@
                                    <th width="15%">Tên Dịch Vụ</th>
                                    <th width="15%">Đơn giá</th>
                                    <th width="15%">Số Lượng</th>                                    
                                    <th style="text-align: center;" width="10%">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody id="tblData">
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary me-1 mb-1 btn-submit-quantity">Lưu</button>
                </div>
            </div>
        </form>
    </div>
</div>