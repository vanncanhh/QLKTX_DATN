    <script type="text/javascript">
        $(document).ready(function () {

            $(".btn-search-stl").click(function () {
                var textSearch = $(".txt-search").val();
                if (textSearch != "") {
                    window.location.href = '/san-pham-tim-kiem/timkiem=' + textSearch;
                }

                // Search(textSearch);
            })

            $(".txt-search").keypress(function (e) {
                if (e.which == 13) {
                    var textSearch = $(".txt-search").val();
                    if (textSearch != "") {
                        window.location.href = '/san-pham-tim-kiem/timkiem=' + textSearch;
                        return false;    //<---- Add this line
                    }

                }
            });
            var timkiem = urlParam();

            if (timkiem != null && timkiem != "") {
                var text = timkiem.split('=')[1];
                $(".tukhoatimkiem").val(text);
            }
        })
        function urlParam() {
            var results = new RegExp('timkiem=[^&#]*').exec(window.location.href);
            if (results == null) {
                return null;
            }
            return decodeURI(results[0]) || "";
        }
        function getUrlParameter(sParam) {
            var sPageURL = window.location.search.substring(1),
                sURLVariables = sPageURL.split('&'),
                sParameterName,
                i;

            for (i = 0; i < sURLVariables.length; i++) {
                sParameterName = sURLVariables[i].split('=');

                if (sParameterName[0] === sParam) {
                    return sParameterName[1] === undefined ? "" : decodeURIComponent(sParameterName[1]);
                }
            }
            return "";
        };


    </script>
