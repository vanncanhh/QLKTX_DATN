        padding-top: 4px !important;
    }
</style>
<div class="page-heading" style="min-height: 70vh;">
    <div data-v-7b8a01fc="" class="container">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3 style="margin: 20px 0px;">Đơn Thuê Phòng</h3>
            </div>
           @* <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                        <li aria-current="page" class="breadcrumb-item active">Quản lý hợp đồng</li>
                    </ol>
                </nav>
            </div>*@
        </div>
    </div>
    <section class="section">
        <div  class="card">                        
            <div  class="card-body">
                <div  class="table-responsive">
                    <table  id="table1" class="table table-striped">
                        <thead>
                            <tr>
                                <th>STT</th>
                                @*<th>Mã HD</th>*@
                                <th>Tên KH</th>
                                @*<th>Tên NV</th>*@
                                <th>Tên nhà</th>
                                <th>Tên phòng</th>
                                <th>Ngày bắt đầu</th>
                                <th>Ngày kết thúc</th>
                                <th>Tiền cọc</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody id="tblData">   
                            @if(Model != null && Model.Count > 0){
                                    int i = 0;
                                    foreach (var item in Model)
                                    {
                                        i++;
                                        <tr>
                                            <td>@i</td>
                                            <td>@item.TenKhachHang</td>
                                            <td>@item.TenNha</td>
                                            <td>@item.TenPhong</td>
                                            <td>@item.NgayBatDauStr</td>
                                            <td></td>
                                            <td>@item.TienCoc</td>
                                            <td>@item.TrangThaiStr</td>
                                        </tr>
                                    }
                            }
                        </tbody>
                    </table>
                </div>                
            </div>          
        </div>
    </section>
    </div>
</div>

